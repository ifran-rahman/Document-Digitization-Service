<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/private_repo_item_layout"
    android:layout_marginTop="10sp"
    app:ignore="NamespaceTypo"
    >

        <ImageView
            android:id="@+id/folder_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20sp"
            card_view:srcCompat="@drawable/folder_image" />

        <TextView
                android:id="@+id/folder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/folder_image"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="2sp"
                android:text="New folder"
                android:textColor="#000"
                android:textFontWeight="100"
                android:textSize="17sp" />

    <View
        android:layout_width="319sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12sp"
        android:layout_below="@id/folder_image"
        android:layout_height="0.5dp"
        android:background="@android:color/black"
       />

</RelativeLayout>