<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo"
    android:id="@+id/notification_item_layout"
    >


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/NotificationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/HomeItemImage"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20sp"
                android:text="Notification Name"
                android:textColor="#000"
                android:textFontWeight="100"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/NotificationDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45sp"
                android:layout_marginTop="50sp"
                android:text="Notification Details"
                android:textColor="#000"
                android:textFontWeight="100"
                android:textSize="10sp"
                />

        </RelativeLayout>


</RelativeLayout>